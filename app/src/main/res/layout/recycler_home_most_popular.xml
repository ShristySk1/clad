<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#12121D0D"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shoe2"
                android:scaleType="centerInside"
                android:layout_marginHorizontal="16dp"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:progressTint="@color/black"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/cardView_image"
        android:layout_toEndOf="@+id/cardView_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@color/colorGray"/>
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_below="@id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cashmere Jacket"
            android:textSize="14sp"
            android:maxLines="2"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/ask_text"
            android:layout_below="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cashmere Jacket"
            android:maxLines="2"
            android:textSize="13sp"
            android:textAlignment="textStart"
            android:textColor="@color/colorGrayText"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/price"
            android:layout_marginTop="5dp"
            android:layout_below="@id/ask_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 34.00"
            android:gravity="bottom"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>