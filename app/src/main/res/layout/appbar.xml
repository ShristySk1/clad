<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/appbar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/end_text_appbar_end"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ripple_5dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/sf_pro_text_bold"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_search_24"
            android:text="XXXX"
            android:textColor="@color/black"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/app_bar_end1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ripple_5dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_user_clad"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/app_bar_end0_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_toLeftOf="@id/app_bar_end1"
            android:background="@drawable/ripple_5dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_search_24"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/appbar1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dashboard_close_appbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_5dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="7dp"
            android:src="@drawable/ic_close"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dashboard_back_apppbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_5dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="7dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dashboard_btn_appbar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_5dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/sf_pro_text_bold"
            android:padding="7dp"
            android:src="@drawable/ic_close"
            android:text="xxxx"
            android:textAllCaps="true"
            android:textColor="@color/ColorBlack"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:layout_marginHorizontal="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx.xxx"

                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/abbreviation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="xxxx"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>

                <ImageView
                    android:id="@+id/filter"
                    android:visibility="visible"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_filter_clad"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ripple_5dp"
                    app:tint="@color/black" />

        <TextView
            android:id="@+id/appbar_text_end"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:text="CLEARALL"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_filter_clad"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ripple_5dp"
            app:tint="@color/black" />

    </RelativeLayout>






</RelativeLayout>