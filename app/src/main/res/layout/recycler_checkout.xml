<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#0D12121D">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_centerInParent="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:progressTint="@color/black"/>

            <ImageView
                android:id="@+id/image"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_shoe"
                />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_margin="6dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:button="@android:color/transparent"
                android:background="@drawable/custom_checkbox"
                android:text=""/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_alignBottom="@id/cardView"
            android:layout_alignTop="@id/cardView"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nike Air Jordan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/itemId"
                android:layout_below="@id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Id: 788455"
                android:textColor="@color/colorGrayTextShopping"
                android:textStyle="normal"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_below="@id/itemId"
                android:layout_above="@id/price"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_size"
                    android:orientation="horizontal"
                    android:background="@drawable/ripple_5dp"
                    android:backgroundTint="@color/colorGrayCheckout"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Size: A"
                        android:minWidth="35dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_marginStart="8dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_arrow_down_angle"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_quantity"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ripple_5dp"
                    android:backgroundTint="@color/colorGrayCheckout"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="QTY: 1"
                        android:minWidth="35dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_marginStart="8dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_arrow_down_angle"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 7800"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_below="@id/layout1"/>

</RelativeLayout>