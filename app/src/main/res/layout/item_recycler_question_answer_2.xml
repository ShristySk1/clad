<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_qa"
    android:paddingVertical="16dp"
    android:background="@drawable/background_outline_bottom"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="20dp"
        android:background="@drawable/circle_primary"
        android:layout_height="20dp"
        android:backgroundTint="@color/colorBlack"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:text="Q"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"
        android:text="Is this available in black color too?"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7" />
<TextView
    android:id="@+id/date"
    android:layout_width="wrap_content"
    android:text="Sita - 06 March 2022"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="@id/textView9"
    app:layout_constraintTop_toBottomOf="@+id/textView7"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textView10"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_primary"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:layout_marginTop="12dp"
        android:text="A"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        android:backgroundTint="@color/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="Black color is not vailable as of now."
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView10" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Goldstar - 06 March 2022"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>