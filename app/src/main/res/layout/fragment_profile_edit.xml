<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".profile.edit.FragmentProfileEdit">
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorRed" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text1"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/pe_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputName"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/pe_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your Name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text2"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Of Birth"
                    android:textSize="@dimen/pe_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputDOB"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textEditDob"
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:clickable="true"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/pe_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your DOB"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text3"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="@dimen/pe_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputEmail"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/pe_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your Email"/>
                </com.google.android.material.textfield.TextInputLayout>

<!--                <TextView-->
<!--                    android:id="@+id/text4"-->
