<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/image_brand"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clad_logo_grey"
                android:background="?attr/selectableItemBackground"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_middle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/layout_image"
            android:layout_toStartOf="@id/ratingBar1"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:background="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXXXX"
                android:textColor="@color/colorBlack"
                android:textStyle="normal"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/comment"
                android:layout_below="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXXXXXXXX"
                android:textColor="@color/colorGray"
                android:textStyle="normal"
                android:textSize="12sp"/>
        </RelativeLayout>

        <com.ayata.clad.utils.SvgRatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:isIndicator="true"
            android:numStars="5"
            android:layout_alignParentEnd="true"
            android:progressDrawable="@drawable/custom_rating_star_theme"
            android:rating="3.5"
            android:stepSize="0.5"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_description"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:text="sdsd ssdsdsdsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_photos"
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:paddingTop="4dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:layout_below="@id/text_description"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/rv_photos"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/colorDivider" />


</RelativeLayout>