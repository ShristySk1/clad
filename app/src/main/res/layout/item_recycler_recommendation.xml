<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/p_width"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    android:paddingVertical="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardBackgroundColor="#12121D0D"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p_height"
        style="@style/CustomSelectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shoe2"
                android:scaleType="centerInside"
                android:layout_marginHorizontal="16dp"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:progressTint="@color/colorBlack"
                />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="9dp"
                android:layout_marginStart="9dp"
                android:src="@drawable/background_gray"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:text="Nike Air Max"/>
    <TextView
        android:id="@+id/ask_text"
        android:layout_width="match_parent"
        android:textSize="13sp"
        android:textColor="@color/colorGrayText"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Nike Company"/>
    <TextView
        android:id="@+id/price_text"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Rs 2895"/>
</LinearLayout>