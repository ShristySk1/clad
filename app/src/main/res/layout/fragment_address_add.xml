<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.address.FragmentAddressAdd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text1"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Title"
                    android:textSize="@dimen/ae_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputTitle"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/ae_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Address Title"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text2"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="@dimen/ae_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputAddress"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textSize="@dimen/ae_text1"
                        android:paddingVertical="10dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your Address"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text3"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Line 2"
                    android:textSize="@dimen/ae_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLine"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textSize="@dimen/ae_text1"
                        android:paddingVertical="10dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your Address"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text4"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Town/City"
                    android:textSize="@dimen/ae_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputCity"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/ae_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your Town/City"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text5"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="@dimen/ae_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputState"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/ae_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your State"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text6"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip Code"
                    android:textSize="@dimen/ae_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputZip"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/ae_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your Zip Code"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text7"
                    android:layout_marginTop="@dimen/pe_margin3"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="@dimen/ae_text2"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputPhone"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_marginHorizontal="@dimen/pe_margin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingVertical="10dp"
                        android:textSize="@dimen/ae_text1"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorBlack"
                        android:hint="Enter Your Phone Number"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/layout_1"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/btnSave"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="@dimen/pe_margin1"
                    android:text="Save Address"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="gone"
                app:SpinKit_Color="@color/colorRed" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>