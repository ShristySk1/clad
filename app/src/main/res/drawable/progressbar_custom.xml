<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:bottom="-4dp" android:left="-4dp" android:right="-4dp" android:top="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/colorGray" />
            <solid android:color="#00000000" />
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/black" />
                <stroke android:width="2px" android:color="@color/black"/>
            </shape>
        </clip>
    </item>

</layer-list>